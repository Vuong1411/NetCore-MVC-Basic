
@{
    ViewData["Title"] = "Trang chủ";
    ViewData["ActivePage"] = "Home";
}

@if (TempData["Message"] != null)
{
    <script>
        alert(@Html.Raw(Json.Serialize(TempData["Message"])));
    </script>
}

<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">Shop điện thoại uy tín nhất Quy Nhơn</h4>
                <h1 class="mb-5 display-3 text-primary">Cửa hàng điện thoại</h1>
                <form asp-controller="Product" asp-action="Index" method="get" class="position-relative mx-auto">
                    <input name="keywords" class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="search" placeholder="Nhập từ khóa">
                    <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;">Tìm kiếm</button>
                </form>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active rounded">
                            <img src="~/img/banner/home1.jpg" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide">
                        </div>
                        <div class="carousel-item rounded">
                            <img src="~/img/banner/home2.jpg" class="img-fluid w-100 h-100 rounded" alt="Second slide">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Vesitable Shop Start-->
@* Danh sách sản phẩm phổ biến *@
<div class="container-fluid vesitable py-5">
    <div class="container py-5">
        <h1 class="mb-0">Danh sách sản phẩm phổ biến</h1>
        @await Component.InvokeAsync("ProductCarousel")
    </div>
</div>
<!-- Vesitable Shop End -->
