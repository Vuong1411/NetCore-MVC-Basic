@page
@model ForgotPasswordModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Nhập email của bạn để đặt lại mật khẩu</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg text-light">Đặt lại mật khẩu</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between">
				<a asp-page="./Login" class="text-decoration-none">Đăng nhập</a>
				<a asp-page="./Register" class="text-decoration-none">Tạo tài khoản</a>
            </div>
        </div>
    </div>
</div>
