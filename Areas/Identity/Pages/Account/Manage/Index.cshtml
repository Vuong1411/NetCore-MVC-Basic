@page
@model IndexModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2 class="text-start mb-4">Hồ sơ</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="tab-content" id="manageTabsContent">
    <!-- Profile Tab -->
    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Full Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="Vui lòng nhập họ tên.." />
                <label asp-for="Input.FullName" class="form-label">Họ và Tên</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Vui lòng nhập thông tin email.." disabled />
                <label asp-for="Email" class="form-label">Email</label>
            </div>

            <!-- Phone Number -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Vui lòng nhập số điện thoại.." />
                <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-primary btn-lg">Lưu</button>
        </form>
    </div>
</div>
