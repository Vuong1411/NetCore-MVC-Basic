@page "/Account/ChangePassword"
@model ChangePasswordModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="text-start mb-4">Đổi mật khẩu</h2>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="tab-content" id="manageTabsContent">
    <!-- Change Password Tab -->
    <div class="tab-pane fade show active" id="change-password" role="tabpanel" aria-labelledby="change-password-tab">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Old Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu cũ" />
                <label asp-for="Input.OldPassword" class="form-label">Mật khẩu cũ</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu mới" />
                <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng xác nhận mật khẩu mới" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-primary btn-lg">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>
